<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.org.progress.financeweek.Szkolenia"
>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/a2"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:scaleType="fitStart"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="20dp"
        android:background="@color/colorField"
        android:text="O szkoleniach"
        style="@style/TextAppearance"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:paddingTop="100dp"
        android:id="@+id/textView6"
        android:onClick="oszkoleniach"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:padding="20dp"
        android:background="@color/colorField5"
        android:text="rejestracja na szkolenia"
        style="@style/TextAppearance"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_above="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="rejestracja"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance"
            android:text="Moje Szkolenia"
            android:onClick="moje"
            android:padding="20dp"/>
    </LinearLayout>
</RelativeLayout>
